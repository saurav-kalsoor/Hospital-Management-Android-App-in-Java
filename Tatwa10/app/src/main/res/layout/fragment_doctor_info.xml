<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_button_border">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_doctor_info"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/male" />

    <TextView
        android:id="@+id/text_view_name_doctor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_doctor_info"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Dr Sanjeev Kalsoor"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/text_view_field_doctor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_name_doctor_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Neuro Surgery"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_qualification_doctor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_field_doctor_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="MBBS MS MCh"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/button_doctor_book_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Book An Appointment"
        android:padding="18dp"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/bottom_fixed_button"
        android:textStyle="bold"/>


</RelativeLayout>